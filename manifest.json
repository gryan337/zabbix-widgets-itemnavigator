{
	"manifest_version": 2.0,
	"id": "itemnavigator-rme",
	"type": "widget",
	"name": "RME Item navigator",
	"namespace": "RMEItemNavigator",
	"version": "1.0",
	"author": "RME",
	"description": "Displays item hierarchy with ability to control other widgets based on selected item.",
	"widget": {
		"size": {
			"width": 12,
			"height": 5
		},
		"js_class": "CWidgetItemNavigatorRME",
		"in": {
			"groupids": {
				"type": "_hostgroupid"
			},
			"hostids": {
				"type": "_hostid"
			}
		},
		"out": [
			{
				"type": "_itemid"
			},
			{
				"type": "_itemids"
			}
		]
	},
	"actions": {
		"widget.itemnavigator-rme.view": {
			"class": "WidgetView"
		}
	},
	"assets": {
		"js": ["class.itemnavigator.js", "class.widget.js", "class.widget-field.item-grouping.js", "class.navigationtree.js"]
	}
}
